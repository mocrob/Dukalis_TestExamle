        android:theme="@style/AppTheme">
        <activity android:name=".features.tasks.presentation.ShowTaskActivity" />
        <activity android:name=".features.tasks.presentation.CreateTaskActivity" />
        <activity
            android:name=".features.login.presentation.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.tasks.presentation.TaskActivity" />
        <activity android:name=".features.login.presentation.CreateUserActivity" />
    </application>

</manifest>